<?xml version="1.0"?>
<watchdog xmlns="http://www.sipfoundry.org/sipX/schema/xml/watchdog-00-00">
   <settings>
      <health check_period="15" />
      <processxmlpath location="path" />
      <email execute="email"/>
   </settings>

   <monitor>
      <process name="proc1" restart="enable" max_restarts="3" report="enable" max_reports="3">
         <failure_contact method="email">email-address</failure_contact>
      </process>
   </monitor>
   <logfile level="notice">log-file</logfile>
</watchdog>
