<?xml version="1.0"?>
<!-- Configure a process to be managed by the process manager -->
<process xmlns="http://www.sipfoundry.org/sipX/schema/xml/process-00-00"
  name="sleeper" manage="enable" stop="enable"
  restart="enable" max_restarts="3"
  report="enable" max_reports="3">
  <run command="/bin/sleep"
       parameters="999"
       defaultdir="/var/log/sipxpbx"/>
  <stdout file="/dev/null"/>
  <stderr file="/dev/null"/>
  <stdin  file=""/>
  <failure_contact method="email">sipxchange@localhost</failure_contact>
</process>
