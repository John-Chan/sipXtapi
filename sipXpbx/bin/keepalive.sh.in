Action=RUN
Status=0
Args=""

while [ $# -ne 0 ]
do
    case ${1} in
        --configtest)
            Action=CONFIGTEST
            ;;

        *)
            Args="$Args $1"
            ;;
    esac           

    shift # always consume 1
done

case ${Action} in
   RUN)
     echo $$ > @SIPX_RUNDIR@/keepalive.pid
     exec @bindir@/sipdbtest keepalive processinfo $Args
     ;;

   CONFIGTEST)
     Status=0

     #@bindir@/sipx-validate-xml @SIPX_CONFDIR@/?.xml
     #Status=$(($Status+$?))

     # Check that the log file is writable.
     logfile="@SIPX_LOGDIR@/dbmonitor.log"
     if [ -e $logfile -a ! -w $logfile ]
     then
	 echo "Log file '$logfile' exists but is not writable by user '@SIPXPBXUSER@'." >&2
	 Status=1
     fi

     # Check that the log file is writable.
     logfile="@SIPX_LOGDIR@/watchdog.log"
     if [ -e $logfile -a ! -w $logfile ]
     then
	 echo "Log file '$logfile' exists but is not writable by user '@SIPXPBXUSER@'." >&2
	 Status=1
     fi

     ;;
esac

exit $Status


