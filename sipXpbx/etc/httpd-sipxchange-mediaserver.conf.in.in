# standard prompts (unprotected for now)
<Directory "@localstatedir@/data/">
    Options Indexes FollowSymLinks MultiViews
    AllowOverride None
    Order allow,deny
    Allow from all
</Directory>

# This is only available to the default (*:8090) port if there is no SSL
<IfDefine !SSL>
    Alias /mailboxes/ "@SIPX_VXMLDATADIR@/"
</IfDefine>

# Restrict the following directory
# Otherwise it will be wide open to anyone with a web browser
<Directory "@SIPX_VXMLDATADIR@/mailstore/">
    Options Indexes FollowSymLinks MultiViews
    AuthType Basic
    AuthName "${SIPXCHANGE_REALM}"
    require valid-user
    AddCPPHandler mod_sipxauth
    Order Deny,Allow
    Deny from all
    Allow from 127.0.0.1
    Satisfy any
</Directory>

# Restrict the following directory
# Otherwise it will be wide open to anyone with a web browser
<Directory "@SIPX_VXMLDATADIR@/prompts/">
    Options Indexes FollowSymLinks MultiViews
    AuthType Basic
    AuthName "${SIPXCHANGE_REALM}"
    require valid-user
    AddCPPHandler mod_sipxauth
    Order Deny,Allow
    Deny from all
    Allow from 127.0.0.1
    Satisfy any
</Directory>

