/var/log/sipxpbx/httpd_access_log {
    notifempty
    sharedscripts
    postrotate
        /bin/kill -USR1 `cat /var/run/sipxpbx/httpd.pid 2>/dev/null` 2> /dev/null || true
    endscript
}

