
# Where Pingtel hard and soft phones get their profile information
Alias /phone/ "@SIPX_CONFIGPHONEDIR@/"

<Directory "@SIPX_CONFIGPHONEDIR@/">
    Options Indexes MultiViews
    AllowOverride None
    Order allow,deny
    Allow from all
</Directory>

Alias /sipdb/ "@SIPX_DBDIR@/"
<Directory "@SIPX_DBDIR@/">
    # Protect the directory hierarchy using Basic Authentication
    # We use SSL as the secure transport so base64
    # encoding is not a security risk.
    AuthType Basic
    AuthName "${SIPXCHANGE_REALM}"

    # Ensure that the following authentication C++ module
    # handles the authentication
    require valid-user
    AddCPPHandler mod_sipxauth

    # Standard directory settings taken from httpd.conf
    Order Deny,Allow
    Deny from all
    Allow from 127.0.0.1
    Satisfy any
</Directory>
