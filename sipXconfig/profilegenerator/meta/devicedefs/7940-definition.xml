<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE device_definition SYSTEM "devicedefinition.dtd"
    [<!ENTITY common-dev-defs SYSTEM "79xx-dev-prof-common-defs.xml">
    <!ENTITY common-user-defs SYSTEM "79xx-user-prof-common-defs.xml">] >

<!--
	All device definitions taken from:
	"Cisco SIP IP Phone Administrator Guide.   Version 4.0, August 2002"
	http://www.cisco.com/application/pdf/en/us/guest/products/ps2156/c1696/ccmigration_09186a00800c6d1c.pdf

-->

<!-- property descriptions taken from:

http://www.cisco.com/en/US/products/sw/voicesw/ps2156/products_administration_guide_chapter09186a00800d6a6d.html#wp1007555

-->

<device_definition>

    <core_software_types>

        <core_software>
            <description>version x.x</description>

            <version>4.2</version>

            <name>CiscoKernel</name>

            <core_software_profile type="phone">
                <profile_file_name>device-settings.txt</profile_file_name>

                <profile_renderer_class>com.pingtel.pds.pgs.plugins.renderer.XpressaConfig</profile_renderer_class>

                <profile_renderer_stylesheet>internal279xx.xsl</profile_renderer_stylesheet>

                <profile_projection_class>com.pingtel.pds.pgs.plugins.projection.StandardTopDown</profile_projection_class>
            </core_software_profile>

            <core_software_profile type="user">
                <profile_file_name>user-settings.txt</profile_file_name>

                <profile_renderer_class>com.pingtel.pds.pgs.plugins.renderer.XpressaConfig</profile_renderer_class>

                <profile_renderer_stylesheet>internal279xx.xsl</profile_renderer_stylesheet>

                <profile_projection_class>com.pingtel.pds.pgs.plugins.projection.StandardTopDown</profile_projection_class>
            </core_software_profile>

        </core_software>

    </core_software_types>

    <device_type>

        <model>7940</model>
        <manufacturer>Cisco</manufacturer>

        <profile type="phone">
            &common-dev-defs;
        </profile>

        <profile type="user">
            &common-user-defs;
        </profile>

    </device_type>

</device_definition>
