<?xml version="1.0"?>
<!DOCTYPE model 
    PUBLIC "-//SIPFoundry//sipXconfig//Model specification 1.0//EN" 
    "http://www.sipfoundry.org/sipXconfig/dtd/setting_1_0.dtd">
<model>
  <group name="bridge-conference">
    <setting name="organizer_code">
      <label>Organizer code</label>
      <type>
        <string required="yes">
          <pattern>[\d#*]+</pattern>
        </string>
      </type>
      <value></value>
      <description>organizer login</description>
    </setting>
    <setting name="particpant_code">
      <label>Participant code</label>
      <type>
        <string>
          <pattern>[\d#*]+</pattern>
        </string>
      </type>
      <value></value>
      <description>DTMF digits for particpant login. Can be empty.</description>
    </setting>
    <setting name="organizer_admit">
      <label>Require organizer</label>
      <type>
        <boolean/>
      </type>
      <value>0</value>
      <description>If set the conference will admit participants only if there is an organizer in the
        conference</description>    
    </setting>
  </group>
</model>