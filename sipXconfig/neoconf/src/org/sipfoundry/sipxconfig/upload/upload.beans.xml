<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
  "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
  
  <bean id="uploadManagerImpl"
    class="org.sipfoundry.sipxconfig.upload.UploadManagerImpl">
    <property name="sessionFactory" ref="sessionFactory"/>
    <property name="firmwareManufacturers">
      <list>
        <bean
          id="org.sipfoundry.sipxconfig.upload.FirmwareManufacturer.UNMANAGED"
          class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean"/>
        <bean class="org.sipfoundry.sipxconfig.upload.FirmwareManufacturer">
          <constructor-arg value="polycom"/>
          <property name="label" value="Polycom Soundpoint"/>
          <property name="fileDelivery" ref="localTftp"/>
        </bean>
      </list>
    </property>
  </bean>
  
  <bean id="uploadManager"
    class="org.springframework.aop.framework.ProxyFactoryBean"
    parent="abstractDao">
    <property name="proxyInterfaces">
      <value>org.sipfoundry.sipxconfig.upload.UploadManager</value>
    </property>
    <property name="target">
      <ref local="uploadManagerImpl"/>
    </property>
  </bean>
  
  <bean id="uploader" class="org.sipfoundry.sipxconfig.upload.Firmware"
    singleton="false">
    <property name="modelFilesContext" ref="modelFilesContext"/>
    <property name="uploadParentDirectory" value="${sysdir.tmp}/uploads"/>
  </bean>
  
  <bean id="localTftp"
    class="org.sipfoundry.sipxconfig.upload.LocalFileSystemDelivery">
    <property name="rootDirectory" value="${sysdir.phone}/profile/tftproot"/>
  </bean>
  
</beans>