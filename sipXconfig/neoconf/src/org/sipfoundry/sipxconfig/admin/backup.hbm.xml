<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" 
	"http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping package="org.sipfoundry.sipxconfig.admin">

	<!-- 
	  - Backup Plan
	  -->
	<class name="BackupPlan" table="backup_plan">
		<id name="id" column="backup_plan_id" type="int" unsaved-value="-1">
			<generator class="sequence">
				<param name="sequence">backup_plan_seq</param>
			</generator>
		</id>
        <property name="limitedCount" column="limited_count"/>
        <property name="configs"/>
        <property name="voicemail"/>
		<!-- database is a reserved sql word -->
        <property name="database" column="dbase"/>
		<bag name="schedules" inverse="true" table="daily_backup_schedule" cascade="all">
		    <key column="backup_plan_id"/>
			<one-to-many class="DailyBackupSchedule"/>		
		</bag>
	</class>

	<!--
      - Daily Backup Schedule
      -->  
	<class name="DailyBackupSchedule" table="daily_backup_schedule">
		<id name="id" column="daily_backup_schedule_id" type="int" unsaved-value="-1">
			<generator class="sequence">
				<param name="sequence">daily_backup_schedule_seq</param>
			</generator>
		</id>        
        <property name="enabled"/>
        <property name="timeOfDay" column="time_of_day"/>
        <property name="scheduledDay" column="scheduled_day" type="org.sipfoundry.sipxconfig.admin.ScheduledDay$UserType"/>
		<many-to-one name="backupPlan" class="BackupPlan" column="backup_plan_id"/>
	</class>
</hibernate-mapping>
