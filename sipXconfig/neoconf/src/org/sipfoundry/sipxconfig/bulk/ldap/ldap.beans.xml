<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
	"http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

  <bean id="attrMap" class="org.sipfoundry.sipxconfig.bulk.ldap.AttrMap">
    <property name="userToLdap">
      <map>
        <entry key="userName" value="uid" />
        <entry key="pin">
          <null />
        </entry>
        <entry key="sipPassword">
          <null />
        </entry>
        <entry key="firstName" value="givenName" />
        <entry key="lastName" value="sn" />
        <entry key="aliasesString" value="telephoneNumber" />
        <entry key="userGroupName" value="ou" />
      </map>
    </property>
    <property name="defaultGroupName" value="ldap imports" />
    <property name="defaultPin" value="1111" />
  </bean>

  <bean id="ldapRowInserter" class="org.sipfoundry.sipxconfig.bulk.ldap.LdapRowinserter"
    parent="rowInserter">
    <property name="attrMap">
      <ref local="attrMap" />
    </property>
    <property name="coreContext" ref="coreContext" />
  </bean>

  <bean id="jndiTemplate" class="org.sipfoundry.sipxconfig.bulk.ldap.JndiLdapTemplate">
    <property name="intialContextFactory" value="com.sun.jndi.ldap.LdapCtxFactory" />
  </bean>

  <bean id="ldapConnectionParams"
    class="org.sipfoundry.sipxconfig.bulk.ldap.LdapConnectionParams">
    <property name="host" value="localhost" />
    <property name="port" value="389" />
  </bean>

  <bean id="ldapManager" class="org.sipfoundry.sipxconfig.bulk.ldap.LdapManagerImpl">
    <property name="connectionParams">
      <ref local="ldapConnectionParams" />
    </property>
    <property name="attrMap">
      <ref local="attrMap" />
    </property>
  </bean>

  <bean id="ldapImportManagerImpl"
    class="org.sipfoundry.sipxconfig.bulk.ldap.LdapImportManagerImpl">
    <property name="sessionFactory" ref="sessionFactory" />
    <property name="rowInserter">
      <ref local="ldapRowInserter" />
    </property>
    <property name="jndiTemplate">
      <ref local="jndiTemplate" />
    </property>
  </bean>

  <bean id="ldapImportManager" class="org.springframework.aop.framework.ProxyFactoryBean">
    <property name="proxyInterfaces"
      value="org.sipfoundry.sipxconfig.bulk.ldap.LdapImportManager" />
    <property name="target">
      <ref local="ldapImportManagerImpl" />
    </property>
    <property name="interceptorNames">
      <list>
        <value>backgroundTaskInterceptor</value>
        <value>hibernateInterceptor</value>
      </list>
    </property>
  </bean>
</beans>
