<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<model>
	<group name="chess">
		<label>The game of chess</label>
		<group name="color">
			<setting name="black"/>
			<setting name="white"/>
        </group>
		<group name="piece">
			<setting name="pawn">
			   <possibleValues>
			     <value>forward twice on first move</value>
			     <value>forward one on subsequent moves</value>
			     <value>diagonal one to take another piece</value>
				</possibleValues>
			</setting>
			<setting name="castle"/>
			<setting name="horse"/>
			<setting name="bishop"/>
			<setting name="queen"/>
			<setting name="king"/>
		</group>
	</group>
	<group name="cards">
		<label>Playing Cards</label>
		<group name="suit">
			<setting name="spades"/>
			<setting name="clubs"/>
			<setting name="diamonds"/>
			<setting name="hearts"/>
		</group>
		<group name="card">
			<setting name="A"/>
			<setting name="2"/>
			<setting name="3"/>
			<setting name="4"/>
			<setting name="5"/>
			<setting name="6"/>
			<setting name="7"/>
			<setting name="8"/>
			<setting name="9"/>
			<setting name="10"/>
			<setting name="J"/>
			<setting name="Q"/>
			<setting name="K"/>
		</group>
	</group>
</model>
