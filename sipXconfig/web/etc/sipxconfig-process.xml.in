<?xml version="1.0"?>
<watchdog-process>
  <process_definitions>
    <group name="ConfigServer">
        <process name="ConfigServer">
            <dependentdelay wait="0" />
            <stdout file="/dev/null" />
            <stderr file="/dev/null" />
            <stdin  file="" />

            <start control="true">
                <execute command="@bin.dir@/sipxconfig.sh"
                         parameters=""
                         defaultdir="@sipxpbx.log.dir@" />
            </start>

            <!-- If no execute, then kill -->
            <stop control="false" />

            <!-- If no execute, then stop-start -->
            <restart control="false" />
        </process>
    </group>
  </process_definitions>
  <watchdog>
   <monitor>
      <process name="ConfigServer" restart="enable" max_restarts="3" report="enable" max_reports="3">
         <failure_contact method="email">@sipxpbx.user@@localhost</failure_contact>
      </process>
   </monitor>
  </watchdog>
</watchdog-process>
