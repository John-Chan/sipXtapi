<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE page-specification PUBLIC "-//Apache Software Foundation//Tapestry Specification 4.0//EN" "http://jakarta.apache.org/tapestry/dtd/Tapestry_4_0.dtd">
<page-specification class="org.sipfoundry.sipxconfig.site.phonebook.EditPhonebook">
  <description>add a description</description>
  <property name="userGroupsString"/>
  <bean name="validator" class="org.sipfoundry.sipxconfig.components.SipxValidationDelegate"/>
  <component id="phonebookForm" type="Form">
    <binding name="delegate" value="bean:validator"/>
  </component>
  <component id="userGroupPanel" type="FieldPanel">
    <binding name="field" value="components.userGroupsX"/>
    <binding name="label" value="message:label.userGroups"/>
    <binding name="description" value="message:description.groups"/>
  </component>
  <component id="userGroups" type="tacos:Autocompleter">
    <binding name="value" value="userGroupsString"/>
    <binding name="size" value="50"/>
    <binding name="listSource" value="groupCandidates"/>
    <binding name="translator" value="translator:string,empty="/>
    <binding name="listener" value="listener:buildGroupCandidates"/>
  </component>
  <component id="phonebookFilePanel" type="FieldPanel">
    <binding name="field" value="components.phonebookFileX"/>
    <binding name="label" value="message:label.phonebookFile"/>
    <binding name="description" value="message:description.phonebookFile"/>
  </component>
  <component id="phonebookFile" type="AssetSelector">
    <binding name="asset" value="phonebookFile" />
    <binding name="assetDir" value="phonebookDirectory" />
    <binding name="errorMsg" value="message:error.select" />
    <binding name="phonebookFile" value="phonebookFile" />
    <binding name="contentType" value="literal:text/csv" />
    <binding name="selectable" value="false" />
  </component>
  <component id="formActions" type="FormActions">
    <binding name="listener" value="listener:savePhonebook" />
    <binding name="callback" value="callback" />
  </component>
</page-specification>