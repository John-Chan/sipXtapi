<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE page-specification
      PUBLIC "-//Apache Software Foundation//Tapestry Specification 4.0//EN"
      "http://jakarta.apache.org/tapestry/dtd/Tapestry_4_0.dtd">
<page-specification class="org.sipfoundry.sipxconfig.site.admin.ExtensionPoolsPage">
  <description>User Extension Pool</description>
  <!--
      - P R O P E R T I E S
      -->
  <inject property="extensionPoolContext" object="spring:extensionPoolContext"/>
  <property name="userExtensionPool" initial-value="extensionPoolContext.userExtensionPool"/>
  <!--
      - B E A N S 
      -->
  <bean name="validator" class="org.sipfoundry.sipxconfig.components.SipxValidationDelegate"/>
  <!--
     - C O M P O N E N T S
     -->
  <component id="form" type="Form">
    <binding name="delegate" value="bean:validator"/>
  </component>
  <component id="enableExtensionPool" type="Checkbox">
    <binding name="value" value="userExtensionPool.enabled"/>
  </component>
  <component id="panelStart" type="FieldPanel">
    <binding name="field" value="components.start"/>
    <binding name="label" value="message:label.start"/>
  </component>
  <component id="start" type="TextField">
    <binding name="value" value="userExtensionPool.firstExtension"/>
    <binding name="validators" value="spring-validators:validPhone,required"/>
    <binding name="displayName" value="message:label.start"/>
  </component>
  <component id="panelEnd" type="FieldPanel">
    <binding name="field" value="components.end"/>
    <binding name="label" value="message:label.end"/>
  </component>
  <component id="end" type="TextField">
    <binding name="value" value="userExtensionPool.lastExtension"/>
    <binding name="validators" value="spring-validators:validPhone,required"/>
    <binding name="displayName" value="message:label.end"/>
  </component>
  <component id="formActions" type="FormActions">
    <binding name="callback" value="callback"/>
    <binding name="listener" value="listener:commit"/>
  </component>
</page-specification>
