<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE page-specification PUBLIC
  "-//Apache Software Foundation//Tapestry Specification 3.0//EN"
  "http://jakarta.apache.org/tapestry/dtd/Tapestry_3_0.dtd">
<!-- generated by Spindle, http://spindle.sourceforge.net -->

<page-specification class="org.sipfoundry.sipxconfig.site.admin.BulkImport">

    <description>Page for importing from CSV file</description>
    
    <property-specification name="uploadFile" 
    	type="org.apache.tapestry.request.IUploadFile"/>
    
    <property-specification name="bulkManager"
    	type="org.sipfoundry.sipxconfig.bulk.BulkManager"
    	initial-value="global.bulkManager"/>
    
     <!--
     - B E A N S
     -->
    <bean name="validator" class="org.sipfoundry.sipxconfig.components.SipxValidationDelegate"/>
    
    <bean name="scheduledDaysPropertyModel" class="org.sipfoundry.sipxconfig.components.EnumPropertySelectionModel">
       <set-property name="enumClass" 
           expression="@org.sipfoundry.sipxconfig.admin.ScheduledDay@class"/>
    </bean>    
    
    <!--
     - C O M P O N E N T S
     -->
    <component id="form" type="Form">
        <binding name="delegate" expression="beans.validator"/>
        <binding name="listener" 
        	expression="global.tapestry.treatUserExceptionAsValidationError(beans.validator, listeners.submit)"/>
    </component>
        
    <component id="import" type="Submit">
        <message-binding name="label" key="label.import"/>        
    </component>
    
    <component id="csvPanel" type="FieldPanel">
        <binding name="field" expression="components.csv"/>
        <message-binding name="label" key="label.csv"/>
        <message-binding name="description" key="description.csv"/>        
    </component>
    <component id="csv" type="Upload">
        <binding name="file" expression="uploadFile"/>
    </component>
    
</page-specification>
