<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE page-specification PUBLIC "-//Apache Software Foundation//Tapestry Specification 4.0//EN" "http://jakarta.apache.org/tapestry/dtd/Tapestry_4_0.dtd">
<page-specification class="org.sipfoundry.sipxconfig.site.phone.NewPhone">
  <!--
	  - P R O P E R T I E S
	  -->
  <inject property="phoneContext" object="spring:phoneContext"/>
  <inject property="settingDao" object="spring:settingDao"/>
  <property name="phone"/>
  <property name="phoneModel" persist="session"/>
  <property name="stay" />
  <inject property="tapestry" object="spring:tapestry" />
  <!--
      - B E A N S
      -->
  <bean name="validator" class="org.sipfoundry.sipxconfig.components.SipxValidationDelegate"/>
  <!--
      - C O M P O N E N T S
      -->
  <component id="form" type="Form">
    <binding name="delegate" value="bean:validator"/>
  </component>
  <component id="editPhoneForm" type="EditPhoneForm">
    <binding name="phone" value="phone"/>
    <binding name="validator" value="bean:validator"/>
  </component>
  <component id="ok" type="Submit">
    <binding name="listener" value="tapestry.treatUserExceptionAsValidationError(beans.validator, listeners.finish)"/>
  </component>
  <component id="cancel" type="Submit">
    <binding name="listener" value="listener:cancel"/>
  </component>
  <component id="stay" type="Checkbox">
    <binding name="value" value="stay"/>
  </component>
</page-specification>