<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE page-specification PUBLIC "-//Apache Software Foundation//Tapestry Specification 3.0//EN" 
	"http://jakarta.apache.org/tapestry/dtd/Tapestry_3_0.dtd">
<page-specification class="org.sipfoundry.sipxconfig.site.phone.NewPhone">
	<!--
	  - P R O P E R T I E S
	  -->
	<property-specification name="phoneContext" 
		type="org.sipfoundry.sipxconfig.phone.PhoneContext" 
    	initial-value="global.phoneContext"/>    
	<property-specification name="phoneData" 
		type="org.sipfoundry.sipxconfig.phone.PhoneData"/>
	<property-specification name="stay" 
		type="boolean"/>
    <!--
      - B E A N S
      -->
    <bean name="validator" class="org.apache.tapestry.valid.ValidationDelegate"/>    
    <!--
      - C O M P O N E N T S
      -->
    <component id="editPhoneForm" type="EditPhoneForm">
        <binding name="phoneData" expression="phoneData"/>
        <binding name="phoneContext" expression="phoneContext"/>
    </component>    
    <component id="ok" type="Submit">
        <binding name="listener" expression="listeners.finish"/>
    </component>
    <component id="cancel" type="Submit">
        <binding name="listener" expression="listeners.cancel"/>
    </component>
    <component id="stay" type="Checkbox">
        <binding name="selected" expression="stay"/>
    </component>
</page-specification>
