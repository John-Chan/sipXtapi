<page-specification class="org.sipfoundry.sipxconfig.site.user.FirstUser">
    <description>Page for choosing the PIN for the new superadmin user</description>
   
    <!--
      - P R O P E R T I E S
      -->

	<property-specification name="coreContext" 
		type="org.sipfoundry.sipxconfig.common.CoreContext" 
    	initial-value="global.coreContext"/>    
    <property-specification name="callback" 
    	type="org.apache.tapestry.callback.ICallback"
     	persistent="yes"/>
    <property-specification name="pin" type="java.lang.String"/>
    
    <!--
      - B E A N S 
      -->

    <bean name="validator" class="org.sipfoundry.sipxconfig.components.SipxValidationDelegate"/>
        
    <!--
      - C O M P O N E N T S
      -->

    <component id="shell" type="Shell">
        <binding name="stylesheet" expression="assets.stylesheet"/>
        <message-binding name="title" key="title"/>
    </component>
    <component id="form" type="Form">
        <binding name="delegate" expression="beans.validator"/>
    </component>
	<component id="pin" type="ConfirmPassword">
        <binding name="password" expression="pin"/>
        <binding name="passwordValidator" expression="global.validPinRequired"/>
    </component>
    <component id="formActions" type="FormActions">
        <binding name="callback" expression="callback"/>
        <binding name="listener" expression="listeners.commit"/>
    </component>    
    
    <!-- A S S E T S -->
	<context-asset name="stylesheet" path="css/sipxconfig.css"/>
    
</page-specification>
