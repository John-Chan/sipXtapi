<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component-specification
      PUBLIC "-//Apache Software Foundation//Tapestry Specification 3.0//EN"
      "http://jakarta.apache.org/tapestry/dtd/Tapestry_3_0.dtd">

<component-specification class="org.sipfoundry.sipxconfig.components.GatewayTable" allow-body="no" allow-informal-parameters="yes">
    <!-- P A R A M E T E R S -->
    
	<parameter name="gatewayCollection" 
        type="java.util.Collection" 
        required="yes" 
        direction="auto">
    </parameter>

    <parameter name="ruleId" 
        type="java.lang.Integer" 
        required="no" 
        default-value="null"
        direction="in">
    </parameter>
        
	<parameter name="editPageName"
        type="java.lang.String" 
        required="yes" 
        direction="in">
    </parameter>
    
    
    <!-- P R O P E R T I E S -->    
    <property-specification name="currentRow"
        type="org.sipfoundry.sipxconfig.admin.dialplan.Gateway"/>
    
   	<property-specification name="selections" 
       type="org.sipfoundry.sipxconfig.components.SelectMap"/>
    
    <!-- B E A N S -->           
    <bean name="rowClass" class="org.apache.tapestry.bean.EvenOdd"/>
    <bean name="gateway2id" class="org.sipfoundry.sipxconfig.components.Gateway2Id" lifecycle="page">
        <set-property name="manager">page.global.sipXconfigContext.getBean("dialPlanManager")</set-property>
    </bean>    
    
    <!-- C O M P O N E N T S -->           
    <component id="tableView" type="contrib:TableView">
        <binding name="source" expression="gatewayCollection"/>
        <static-binding name="columns" value="* Name:name,Address:address,Description:description"/>
    </component>    
    
    <component id="tableColumns" type="contrib:TableColumns"/>
    
    <component id="tableRows" type="contrib:TableFormRows">
		<binding name="class" expression="beans.rowClass.next"/>
		<binding name="row" expression="currentRow"/>
        <binding name="convertor" expression="beans.gateway2id"/>
    </component>

    <component id="tableValues" type="contrib:TableValues"/>
        
	<component id="NameColumnValue" type="Block"/>
    
    <component id="nameText" type="Insert">
        <binding name="value" expression="currentRow.name"/>
    </component>
    
    <component id="editRowLink" type="DirectLink">
        <binding name="listener" expression="listeners.edit"/>
        <binding name="parameters" expression="currentRow.id"/>
    </component>
    
    <component id="selectedRow" type="Checkbox">
        <binding name="selected" expression="selections.selected[currentRow.id]"/>
    </component>
                    
</component-specification>
