<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
	"http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

<bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
    <property name="urlMap">
        <map>
            <entry key="/UserService">
                <ref bean="userService"/>
            </entry>
            <entry key="/TestService">
                <ref bean="testService"/>
            </entry>
        </map>
    </property>
</bean>

<!-- Declare a parent bean with all properties common to both services -->
<bean id="userService" class="org.codehaus.xfire.spring.remoting.XFireExporter">
    <property name="serviceFactory" ref="xfire.serviceFactory"/>
    <property name="xfire" ref="xfire"/>
    <property name="service" ref="userServiceImpl"/>
    <property name="serviceInterface" value="org.sipfoundry.sipxconfig.api.UserService"/>
</bean>

<bean id="testService" class="org.codehaus.xfire.spring.remoting.XFireExporter">
    <property name="serviceFactory" ref="xfire.serviceFactory"/>
    <property name="xfire" ref="xfire"/>
    <property name="service" ref="testServiceImpl"/>
    <property name="serviceInterface" value="org.sipfoundry.sipxconfig.api.TestService"/>
</bean>
	
<bean id="testServiceImpl" class="org.sipfoundry.sipxconfig.api.TestServiceImpl">
	<property name="coreContext" ref="coreContext"/>	
</bean>

<bean id="userServiceImpl" class="org.sipfoundry.sipxconfig.api.UserServiceImpl">
	<property name="coreContext" ref="coreContext"/>
	<property name="settingDao" ref="settingDao"/>
</bean>

</beans>

