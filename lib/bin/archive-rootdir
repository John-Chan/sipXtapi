#!/bin/sh

# Purpose of this script is to extract an archive, rename its root dir, then
# tar the archive back up.

ExitCode=0
TempDir=/tmp

StagingDir=$TempDir/patch-archive.tmp
if [ -d $StagingDir ]
then
   rm -rf $StagingDir
fi

mkdir -p $StagingDir
tar -C $StagingDir -xvzf $1

mv $StagingDir/$2 $StagingDir/$3
tar -C $StagingDir -cvzf $1.new $3
rm -rf $StagingDir

