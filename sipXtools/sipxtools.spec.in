Name: @PACKAGE@
Version: @VERSION@
Release: %{buildno}

Summary: Utilities for sipX
License: LGPL
Group:    Productivity/Telephony/SIP/Utilities
Vendor: SIPfoundry
Packager: SIPfoundry <sipx-dev@sipfoundry.org>
Url: http://www.sipfoundry.org/sipXtools

Source: %name-%version.tar.gz

Prefix: %_prefix
BuildRoot: %{_tmppath}/%name-%version-root

%description
General utilities for sipXpbx system

%prep
%setup -q

%build
%configure @CONFIGURE_OPTIONS@
cp config.log %name.configlog
make all

%install

rm -rf $RPM_BUILD_ROOT
make DESTDIR=$RPM_BUILD_ROOT install

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(644,root,root,755)
%doc CONTRIBUTORS LICENSE INSTALL README NEWS TODO ChangeLog %name.configlog
%attr(755,root,root) %{_bindir}/expire-spread
%attr(755,root,root) %{_bindir}/monitor-spread
%attr(755,root,root) %{_bindir}/sipxproc
%attr(755,root,root) %{_bindir}/sipxcar
%attr(755,root,root) %{_bindir}/polycom-config
%attr(755,root,root) %{_bindir}/sipdb-dump
%{_mandir}/man1/sipxproc.1.gz
%{_mandir}/man1/sipxcar.1.gz
%{_mandir}/man1/polycom-config.1.gz
%{_mandir}/man1/sipdb-dump.1.gz
