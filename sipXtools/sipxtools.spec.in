Name: @PACKAGE@
Version: @VERSION@
Release: %{buildno}

Summary: Utilities for sipXpbx SIP PBX
License: LGPL
Group:    Productivity/Telephony/SIP/Servers
Vendor: SIPfoundry
Packager: SIPfoundry <sipx-dev@sipfoundry.org>
Url: http://www.sipfoundry.org/sipXtras

Source: %name-%version.tar.gz

Prefix: %_prefix
BuildRoot: %{_tmppath}/%name-%version-root

%description
General utilities for sipXpbx system

%prep
%setup -q

%build
%configure @CONFIGURE_OPTIONS@
cp config.log %name.configlog
make all

%install

rm -rf $RPM_BUILD_ROOT
make DESTDIR=$RPM_BUILD_ROOT install

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(644,root,root,755)
%doc CONTRIBUTORS LICENSE INSTALL README NEWS TODO ChangeLog %name.configlog
%attr(755,root,root) %{_bindir}/sipxproc
%attr(755,root,root) %{_bindir}/sipxcar
%{_mandir}/man1/sipxproc.1*
%{_mandir}/man1/sipxcar.1*