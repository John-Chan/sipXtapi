<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
	"http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

  <!--
  - F O R W A R D I N G  C O N T E X T
  -->
    
  <bean id="forwardingContextImpl"
    class="org.sipfoundry.sipxconfig.admin.forwarding.ForwardingContextImpl">
    <property name="sessionFactory" ref="sessionFactory"/>
    <property name="coreContext" ref="coreContextImpl"/>
    <property name="processContext" ref="sipxProcessContext"/>    
  </bean>

  <bean id="forwardingContextUserDelete" 
    class="org.sipfoundry.sipxconfig.common.DaoEventListener" 
    factory-bean="forwardingContextImpl" factory-method="createUserDeleteListener"/>
    
  <bean id="forwardingContext" class="org.springframework.aop.framework.ProxyFactoryBean" parent="abstractDao"
     depends-on="forwardingContextUserDelete">
    <property name="proxyInterfaces" 
      value="org.sipfoundry.sipxconfig.admin.forwarding.ForwardingContext"/>
    <property name="target">
      <ref local="forwardingContextImpl"/>
    </property>
  </bean>

</beans>
