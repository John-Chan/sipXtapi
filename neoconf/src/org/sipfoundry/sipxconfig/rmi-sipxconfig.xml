<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
	"http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    <!--
      - R M I  
      -->
    <bean name="aliasServiceExporter" class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="service">
			<bean class="org.sipfoundry.sipxconfig.admin.forwarding.AliasServiceImpl">
                <property name="forwardingContext">
                    <ref bean="forwardingContext"/>
                </property>
                <property name="callGroupContext">
                    <ref bean="callGroupContext"></ref>
                </property>
            </bean>            
        </property>
        <property name="serviceName">
            <value>ForwardingAliasService</value>
        </property>
        <property name="registryPort">
            <value>2001</value>
        </property>
    </bean>
    
    <bean name="notifyServiceExporter" class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="service">
			<bean class="org.sipfoundry.sipxconfig.legacy.LegacyNotifyServiceImpl" dependency-check="objects">
                <property name="dialPlanContext">
                    <ref bean="dialPlanContext"/>
                </property>
                <property name="forwardingContext">
                    <ref bean="forwardingContext"/>
                </property>
                <property name="phoneContext">
                    <ref bean="phoneContext"/>
                </property>
            </bean>            
        </property>
        <property name="serviceName">
            <value>LegacyNotifyService</value>
        </property>
        <property name="registryPort">
            <value>2001</value>
        </property>
    </bean>
</beans>
