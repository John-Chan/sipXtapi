<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
	"http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

	<bean id="phoneFactoryResource" 
		class="org.springframework.core.io.ClassPathResource">
		<constructor-arg type="java.lang.String">
			<value>PhoneFactory.xml</value>
		</constructor-arg>
	</bean>
	<bean id="phoneFactory" 
		class="org.sipfoundry.sipxconfig.core.PhoneFactoryImpl">
		<constructor-arg type="org.springframework.core.io.Resource">
			<ref bean="phoneFactoryResource"/>
		</constructor-arg>
	</bean>
	<!--
      -  B U S I N E S S  C O N T E X T
      -
      -  Single object holding access to all other service layer objects
      -->
	<bean id="sipxconfig" class="org.sipfoundry.sipxconfig.core.SipxConfigImpl">
		<!-- 
		 - LOAD DAO indendently so this file can be used for unittests
		 - that don't use the database.
		  -->
		<property name="phoneFactory">
			<ref bean="phoneFactory"/>
		</property>
	</bean>
</beans>