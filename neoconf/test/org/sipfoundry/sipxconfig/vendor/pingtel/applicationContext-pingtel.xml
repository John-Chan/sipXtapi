<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
  "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

    <bean id="sipxconfig" class="org.sipfoundry.sipxconfig.core.SipxConfig">
        <property name="devicePlugins">
            <set>
                <ref local="pingtelHardPhone"/>
                <ref local="pingtelSoftPhone"/>
            </set>
        </property>
    </bean>
                
    <bean id="pingtelHardPhone" class="org.sipfoundry.sipxconfig.vendor.pingtel.SipxPhoneDevicePlugin">
        <property name="pluginId"><value>xpressa_strongarm_vxworks</value></property>
    </bean>

    <bean id="pingtelSoftPhone" class="org.sipfoundry.sipxconfig.vendor.pingtel.SipxPhoneDevicePlugin">
        <property name="pluginId"><value>ixpressa_x86_win32</value></property>
    </bean>

</beans>
