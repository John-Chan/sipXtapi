<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE page-specification PUBLIC
	"-//Apache Software Foundation//Tapestry Specification 4.0//EN"
	"http://jakarta.apache.org/tapestry/dtd/Tapestry_4_0.dtd">
<page-specification
	class="org.sipfoundry.sipxconfig.site.admin.commserver.ServerSettings">
	
	<description>Server settings</description>
	
	<!-- P R O P E R T I E S -->
	<inject property="server" object="spring:sipxServer"/>
	<property name="parentSettingName" persist="yes"
		initial-value="'voice-mail'"/>
	<property name="parentSetting"/>
	
	<!-- B E A N S -->
	<bean name="validator"
		class="org.sipfoundry.sipxconfig.components.SipxValidationDelegate"/>
	
	<!-- C O M P O N E N T S -->
	
	<component id="settingsNavigation" type="SettingsNavigation">
		<binding name="settings" value="server.settings"/>
		<binding name="tab" value="parentSettingName"/>
		<binding name="heading" value="message:title"/>
	</component>
	<component id="settingDescription" type="Insert">
		<binding name="value" value="parentSetting.description"/>
	</component>
	<component id="settingsForm" type="SettingsForm">
		<binding name="settings" value="parentSetting"/>
		<binding name="cancelListener" value="listener:cancel"/>
		<binding name="applyListener" value="listener:apply"/>
		<binding name="validator" value="bean:validator"/>
	</component>
	
</page-specification>