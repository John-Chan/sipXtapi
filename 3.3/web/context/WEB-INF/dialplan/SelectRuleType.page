<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE page-specification PUBLIC "-//Apache Software Foundation//Tapestry Specification 4.0//EN" "http://jakarta.apache.org/tapestry/dtd/Tapestry_4_0.dtd">
<page-specification class="org.sipfoundry.sipxconfig.site.dialplan.SelectRuleType">
  <!--
	  - P R O P E R T I E S
	  -->
  <inject property="dialPlanContext" object="spring:dialPlanContext"/>
  <property name="ruleType" >
  </property>
  <!--
     - B E A N S
     -->
  <bean name="validator" class="org.sipfoundry.sipxconfig.components.SipxValidationDelegate"/>
  <bean name="ruleTypeModel" class="org.sipfoundry.sipxconfig.components.EnumPropertySelectionModel" lifecycle="page">
    <set name="options" value="@org.sipfoundry.sipxconfig.site.dialplan.SelectRuleType@TYPES"/>
  </bean>
  <!--
     - C O M P O N E N T S
     -->
  <component id="form" type="Form">
    <binding name="delegate" value="beans.validator"/>
  </component>
  <component id="ruleTypeSelection" type="PropertySelection">
    <binding name="value" value="ruleType"/>
    <binding name="model" value="beans.ruleTypeModel"/>
  </component>
  <component id="next" type="Submit">
    <binding name="listener" value="listeners.next"/>
  </component>
</page-specification>